# ====================================
# Core Service Configuration
# ====================================

# Server
PORT=8080
ENVIRONMENT=development

# Database (required)
DATABASE_URL=postgres://user:password@localhost:5432/shop?sslmode=disable

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Elasticsearch (optional)
ELASTICSEARCH_URL=http://localhost:9200

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# ====================================
# OpenTelemetry Tracing (optional)
# ====================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SAMPLE_RATE=0.1

# ====================================
# JWT Authentication
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ====================================
# OAuth Providers (optional)
# ====================================

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Facebook OAuth
FACEBOOK_OAUTH_CLIENT_ID=
FACEBOOK_OAUTH_CLIENT_SECRET=
FACEBOOK_OAUTH_REDIRECT_URL=http://localhost:8080/auth/facebook/callback

# ====================================
# Email Providers (optional)
# ====================================

# SendPulse (Ukrainian email provider)
SENDPULSE_CLIENT_ID=
SENDPULSE_CLIENT_SECRET=

# Mailchimp
MAILCHIMP_API_KEY=

# eSputnik (Ukrainian marketing automation)
ESPUTNIK_API_KEY=

# ====================================
# SMS Providers (optional)
# ====================================

# TurboSMS (Ukrainian SMS provider)
TURBOSMS_API_KEY=
TURBOSMS_SENDER=ShopName

# AlphaSMS (Ukrainian SMS provider)
ALPHASMS_LOGIN=
ALPHASMS_API_KEY=
ALPHASMS_SENDER=ShopName

# SMS.ua (Ukrainian SMS provider)
SMSUA_API_KEY=
SMSUA_SENDER=ShopName

# ====================================
# ERP Integration (optional)
# ====================================

# 1C Enterprise
ONEC_BASE_URL=http://localhost/1c_base/odata/standard.odata/
ONEC_USERNAME=
ONEC_PASSWORD=

# BAS (Ukrainian 1C fork)
BAS_BASE_URL=
BAS_USERNAME=
BAS_PASSWORD=

# Dilovod (Ukrainian ERP)
DILOVOD_API_KEY=
DILOVOD_COMPANY_ID=

# ====================================
# S3/MinIO Storage (optional)
# ====================================
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=shop
S3_REGION=us-east-1
S3_USE_SSL=false
S3_PUBLIC_URL=http://localhost:9000/shop

# ====================================
# Webhooks
# ====================================
WEBHOOK_WORKERS=5

# ====================================
# Marketplace APIs (optional)
# ====================================

# Rozetka (Ukrainian marketplace)
ROZETKA_API_KEY=
ROZETKA_SELLER_ID=

# Prom.ua (Ukrainian marketplace)
PROM_API_KEY=
PROM_SELLER_ID=

# OLX (Ukrainian classifieds)
OLX_CLIENT_ID=
OLX_CLIENT_SECRET=
OLX_ACCESS_TOKEN=

# Hotline (Ukrainian price aggregator)
HOTLINE_API_KEY=

# Google Merchant Center
GOOGLE_MERCHANT_ID=
GOOGLE_MERCHANT_KEY=

# Facebook Commerce
FACEBOOK_CATALOG_ID=
FACEBOOK_ACCESS_TOKEN=

# ====================================
# Delivery Providers (optional)
# ====================================

# Nova Poshta (Ukrainian delivery)
NOVAPOSHTA_API_KEY=

# Ukrposhta (Ukrainian postal service)
UKRPOSHTA_API_KEY=
UKRPOSHTA_BEARER_TOKEN=

# Meest Express (Ukrainian delivery)
MEEST_API_KEY=
MEEST_USERNAME=
MEEST_PASSWORD=

# ====================================
# Payment Providers (optional)
# ====================================

