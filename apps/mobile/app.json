{
  "name": "ShopMobile",
  "displayName": "Shop",
  "expo": {
    "name": "Shop",
    "slug": "shop-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shop.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Потрібен доступ до камери для пошуку товарів за фото",
        "NSPhotoLibraryUsageDescription": "Потрібен доступ до галереї для вибору фото товарів",
        "NSFaceIDUsageDescription": "Використовуйте Face ID для швидкого входу",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.shop.mobile",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Дозволити доступ до камери для пошуку товарів за фото"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Дозволити доступ до галереї для вибору фото товарів"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Дозволити Face ID для швидкого входу"
        }
      ],
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
